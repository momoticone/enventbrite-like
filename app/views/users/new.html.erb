<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>


      <%= f.label :password %>
      <%= f.password_field :password %>


      <%= f.submit "Connect my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>